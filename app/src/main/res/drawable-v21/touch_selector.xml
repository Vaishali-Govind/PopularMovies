<!-- Button can exist in one of several different states: pressed, focused, or neither -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true">
        <!-- Defining ripple: in order of color - foreground (ripple), background (item) -->
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
                android:color="@color/overlay_ripple_accent">
            <item android:drawable="@color/base_ripple_accent"/>
        </ripple>
    </item>

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
         of a ListView -->
    <item android:state_activated="true"
          android:drawable="@color/overlay_accent" />

    <!-- Default state. -->
    <item android:drawable="@android:color/transparent" />

</selector>